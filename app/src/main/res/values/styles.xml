<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_bg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">10dp</item>
    </style>

</resources>
